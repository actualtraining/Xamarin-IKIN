<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleFormIKIN.SampleGridLayout" Title="Grid Layout">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <Label FontSize="Large" Text="Hello" 
                 Grid.Column="0" Grid.Row="0" VerticalTextAlignment="Center" 
               HorizontalTextAlignment="Center" />
        <Label FontSize="Large" Text="Hello" VerticalTextAlignment="Center" 
               HorizontalTextAlignment="Center"  
                 Grid.Column="1" Grid.Row="0" />
        <BoxView BackgroundColor="Orange"  
                 Grid.Column="0" Grid.Row="1" />
        <BoxView BackgroundColor="Purple"  
                 Grid.Column="1" Grid.Row="1" />
    </Grid>
    
</ContentPage>