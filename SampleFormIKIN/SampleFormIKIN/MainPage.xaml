<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SampleFormIKIN"
             x:Class="SampleFormIKIN.MainPage" >

    <StackLayout Orientation="Vertical">
        <Label Text="First Name :" FontSize="Medium" />
        <Entry x:Name="txtFirstName" Placeholder="enter first name" />
        <Label Text="Last Name :" FontSize="Medium" />
        <Entry x:Name="txtLastName" Placeholder="enter last name" />
        <StackLayout Orientation="Horizontal">
            <Button x:Name="btnSubmit" Text="Submit" Clicked="btnSubmit_Clicked" />
            <Button x:Name="btnReset" Text="Reset" />
        </StackLayout>
       
    </StackLayout>

</ContentPage>